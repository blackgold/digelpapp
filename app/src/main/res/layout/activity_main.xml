<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:rowCount="4"
        android:columnCount="3"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/string_q1"
            android:id="@+id/textViewFood" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/buttonFoodDown"
            android:src="@mipmap/thumbs_down" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/buttonFoodUp"
            android:src="@mipmap/thumbs_up"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/string_q2"
            android:id="@+id/textViewService"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/buttonServiceDown"
            android:src="@mipmap/thumbs_down"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:id="@+id/buttonServiceUp"
            android:src="@mipmap/thumbs_up"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/string_q3"
            android:id="@+id/textViewAmbiance"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/buttonAmbianceDown"
            android:src="@mipmap/thumbs_down" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/buttonAmbianceUp"
            android:src="@mipmap/thumbs_up"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:id="@+id/buttonSubmit"
            android:text="@string/string_submit" />

    </GridLayout>

</LinearLayout>